import sys
import cv2
import mediapipe as mp
import requests

print("Python:", sys.version)
print("OpenCV:", cv2.__version__)

# ----------------- Mediapipe setup -----------------
mp_hands = mp.solutions.hands
hands = mp_hands.Hands(max_num_hands=1, min_detection_confidence=0.7)
mp_draw = mp.solutions.drawing_utils

# ----------------- Finger utility -----------------
def fingers_up(hand_landmarks):
    tips = [4, 8, 12, 16, 20]
    pip  = [3, 6, 10, 14, 18]
    f = []

    # Thumb: check horizontal direction
    if hand_landmarks.landmark[tips[0]].x < hand_landmarks.landmark[pip[0]].x:
        f.append(1)
    else:
        f.append(0)

    # Other 4 fingers: tip above pip joint
    for i in range(1,5):
        if hand_landmarks.landmark[tips[i]].y < hand_landmarks.landmark[pip[i]].y:
            f.append(1)
        else:
            f.append(0)
    return f

# ----------------- Gesture → Action Map -----------------
GESTURE_MAP = {
    (1,1,1,1,1): "STOP",         # Open palm → Stop
    (0,0,0,0,0): "FORWARD",      # Fist → Forward
    (1,0,0,0,0): "BACKWARD",     # Thumb up → Backward
    (0,1,0,0,0): "RIGHT",        # Index finger → Right
    (1,1,0,0,0): "LEFT"          # Index + thumb open → Left
}

# ----------------- ESP8266 Setup -----------------
ESP_IP = "http://192.168.8.102"  # Added http:// prefix
TIMEOUT = 0.1  # timeout in seconds to avoid hanging


cap = cv2.VideoCapture(0)
last_action = None

while True:
    ret, frame = cap.read()
    if not ret:
        break

    frame = cv2.flip(frame, 1)
    imgRGB = cv2.cvtColor(frame, cv2.COLOR_BGR2RGB)
    results = hands.process(imgRGB)

    action = None

    if results.multi_hand_landmarks:
        for handLms in results.multi_hand_landmarks:
            mp_draw.draw_landmarks(frame, handLms, mp_hands.HAND_CONNECTIONS)
            f_state = tuple(fingers_up(handLms))
            action = GESTURE_MAP.get(f_state, None)

    # Show text overlay
    if action:
        cv2.putText(frame, f"Action: {action}", (10, 50),
                    cv2.FONT_HERSHEY_SIMPLEX, 1.2, (0,255,0), 3)


        # Send command only if changed
        if action != last_action:
            print("Gesture →", action)
            try:
                requests.get(f"{ESP_IP}/?command={action}", timeout=TIMEOUT)
            except requests.exceptions.RequestException as e:
                print("Error sending command:", e)
            last_action = action

    cv2.imshow("One-Hand Gesture Control", frame)
    if cv2.waitKey(1) & 0xFF == ord('q'):
        break

cap.release()
cv2.destroyAllWindows()
